/* pages/guess/guess.wxss */
.container {
  min-height: 100vh;
  background: white;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 160rpx;
  position: relative;
}

.emoji-section {
  display: flex;
  gap: 40rpx;
  margin-top: 200rpx;
  position: fixed;
  top: 120rpx;
  left: 50%;
  transform: translateX(-50%);
}

.emoji {
  font-size: 80rpx;
}

.control-btns {
  display: flex;
  gap: 80rpx;
  margin-bottom: 60rpx;
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.control-btn {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.control-btn text {
  font-size: 28rpx;
  color: #333;
  font-weight: 300;
  letter-spacing: 2rpx;
}

.control-btn:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.8);
}

.input-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 75rpx;
  position: fixed;
  bottom: 240rpx;
  left: 50%;
  transform: translateX(-50%);
}

.guess-input {
  width: 60%;
  height: 80rpx;
  background: transparent;
  border-bottom: 2rpx solid #333;
  padding: 0 40rpx;
  font-size: 32rpx;
  text-align: center;
}

.submit-btn {
  width: 200rpx;
  height: 98rpx;
  background: #000000;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #FFFFFF;
  display: flex;
  align-items: center;
  justify-content: center;
}

.submit-btn:active {
  opacity: 0.9;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
}

.modal-content {
  width: 80%;
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.modal-image {
  width: 200rpx;
  height: 200rpx;
  margin: 20rpx 0;
}

.modal-btn {
  margin-top: 40rpx;
  width: 200rpx;
  height: 80rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 28rpx;
  color: #333;
}

.score-section {
  position: absolute;
  top: 180rpx;
  right: 40rpx;
}

.score-text {
  font-size: 32rpx;
  color: #666;
}

.hint-text {
  font-size: 36rpx;
  color: #333;
  margin-bottom: 30rpx;
}

/* 修改placeholder的样式 */
.placeholder {
  color: #999;
  text-align: center;
}

.page {
  background: white;
}