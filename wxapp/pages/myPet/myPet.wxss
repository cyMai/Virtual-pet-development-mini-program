/* pages/myPet/myPet.wxss */
.container {
  padding: 40rpx;
  background: #fff;
  min-height: 100vh;
}

.header {
  margin-bottom: 60rpx;
  text-align: center;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #333;
}

.section-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 30rpx;
}

.type-section {
  margin-bottom: 60rpx;
}

.type-options {
  display: flex;
  justify-content: space-around;
  padding: 20rpx 0;
}

.type-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 40rpx;
  border-radius: 12rpx;
  border: 2rpx solid #eee;
}

.type-item.selected {
  border-color: #4CAF50;
  background: #E8F5E9;
}

.type-item image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
}

.type-item text {
  font-size: 28rpx;
  color: #333;
}

.name-section {
  margin-bottom: 80rpx;
}

.name-input {
  width: 100%;
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.button-section {
  margin-top: 40rpx;
}

.create-btn {
  width: 100%;
  height: 88rpx;
  background: #4CAF50;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.create-btn[disabled] {
  background: #ccc;
  color: #fff;
}