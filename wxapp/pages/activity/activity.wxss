/* pages/activity/activity.wxss */
.container {
  padding: 40rpx;
  min-height: 100vh;
  background: #f7f7f7;
}

.pet-info {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 40rpx;
}

.pet-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  display: block;
}

.mood-bar {
  margin-top: 20rpx;
}

.progress-bar {
  height: 20rpx;
  background: #eee;
  border-radius: 10rpx;
  margin: 10rpx 0;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: #4CAF50;
  transition: width 0.3s ease;
}

.start-btn {
  width: 80%;
  height: 88rpx;
  background: #333;
  color: #fff;
  border-radius: 44rpx;
  margin-top: 40rpx;
}

.result-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
}

.result-content {
  width: 80%;
  background: #fff;
  border-radius: 12rpx;
  padding: 40rpx;
  text-align: center;
}

.activity-type {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.activity-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 30rpx;
}

.mood-change {
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.mood-change.positive {
  color: #4CAF50;
}

.mood-change.negative {
  color: #f44336;
}

.confirm-btn {
  width: 200rpx;
  height: 80rpx;
  background: #333;
  color: #fff;
  border-radius: 40rpx;
  font-size: 28rpx;
}