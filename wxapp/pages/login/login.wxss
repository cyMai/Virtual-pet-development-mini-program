/* pages/login/login.wxss */
page {
  background: #f7f7f7;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.background {
  width: 90%;
  margin-top: 100rpx;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.input-box {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.inputs {
  height: 80rpx;
  font-size: 28rpx;
  color: #333;
}

.plas {
  color: #999;
}

.click {
  background: #333;
  color: white;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-radius: 45rpx;
  font-size: 32rpx;
  margin-top: 60rpx;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.1);
}

.cha {
  margin-top: 40rpx;
  text-align: center;
}

.no {
  color: #666;
  font-size: 28rpx;
  display: inline-block;
  padding: 20rpx;
}