/* pages/record/record.wxss */
.container {
  min-height: 100vh;
  background: #f7f7f7;
  padding: 30rpx;
}

/* 统计区域样式 */
.stats-section {
  display: flex;
  justify-content: space-around;
  padding: 40rpx 20rpx;
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.stats-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.stats-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.stats-label {
  font-size: 24rpx;
  color: #666;
}

/* 记录列表样式 */
.record-list {
  background: #fff;
  border-radius: 12rpx;
  padding: 30rpx;
}

.record-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.record-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1px solid #f5f5f5;
}

.record-left {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.record-name {
  font-size: 28rpx;
  color: #333;
}

.record-time {
  font-size: 24rpx;
  color: #999;
}

.record-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  gap: 8rpx;
}

.focus-time {
  font-size: 28rpx;
  color: #333;
}

.exp-gained {
  font-size: 24rpx;
  color: #ff9800;
}

/* 无数据样式 */
.no-data {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  color: #999;
  font-size: 28rpx;
}

.no-data image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}