.container {
  min-height: 100vh;
  height: 100vh;
  overflow: hidden;
  background: white;
  padding: 0rpx 60rpx;
  display: flex;
  flex-direction: column;
}

.header {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 10rpx;
}

.header text {
  font-size: 28rpx;
  color: #333;
}

.top-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  margin-top: 40rpx;
  margin-bottom: 80rpx;
  flex-shrink: 0;
}

.greeting {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.greeting text {
  font-size: 36rpx;
  color: #333;
  font-weight: 400;
}

.box-image {
  width: 400rpx;
  height: 200rpx;
  margin-right: -90rpx;
}

.box-image image {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.growth-section {
  display: flex;
  justify-content: space-between;
  width: 100%;
  margin-bottom: 30rpx;
  flex-shrink: 0;
}

.left-section {
  flex: 0.7;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.level-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.level-item text {
  font-size: 28rpx;
  color: #333;
}

.level-bar {
  width: 100%;
  height: 32rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
  position: relative;
  overflow: hidden;
}

.level-progress {
  position: absolute;
  left: 0;
  top: 0;
  height: 100%;
  background: linear-gradient(90deg, #4CAF50, #8BC34A);  /* 等级进度条颜色 */
  transition: width 0.3s ease;
}

/* 为不同类型的进度条设置不同颜色 */
.level-item:nth-child(2) .level-progress {
  background: linear-gradient(90deg, #FF9800, #FFC107);  /* 经验值进度条颜色 */
}

.level-item:nth-child(3) .level-progress {
  background: linear-gradient(90deg, #2196F3, #03A9F4);  /* 心情值进度条颜色 */
}

.level-text {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #333;
  font-size: 24rpx;
  z-index: 1;
}

.right-section {
  width: 240rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-left: -20rpx;
  align-items: flex-start;
}

.right-section text {
  font-size: 28rpx;
  color: #666;
}

.icon-section {
  display: flex;
  justify-content: space-around;
  width: 100%;
  margin: 80rpx 80rpx 40rpx 0rpx;
  flex-shrink: 0;
}

.icon-item {
  width: 56rpx;
  height: 56rpx;
  padding: 24rpx;
  background: #f5f5f5;
  border-radius: 50%;
}

.icon-item image {
  width: 100%;
  height: 100%;
}

.button-section {
  display: flex;
  gap: 10rpx;
  margin: 0 -80rpx 120rpx -345rpx;
  height: 320rpx;
  padding: 0 240rpx;
  width: calc(100% + 160rpx);
  flex-shrink: 0;
  margin-top: auto;
}

.time-record {
  flex: 2;
  height: 320rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin: 0 5rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.right-buttons {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  height: 320rpx;
  margin: 0 5rpx;
}

.button {
  flex: 1;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.time-record text,
.button text {
  font-size: 28rpx;
  color: #333;
}

.time-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
}

.time-info text {
  font-size: 24rpx;
  color: #333;
} 