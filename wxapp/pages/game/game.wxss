.container {
  min-height: 100vh;
  padding: 40rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-list {
  margin-top: 360rpx;
  display: flex;
  justify-content: center;
  gap: 60rpx;
  padding: 0 40rpx;
}

.game-box {
  width: 260rpx;
  background: #f8f8f8;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.game-box:active {
  background: #f0f0f0;
}

.game-icon {
  width: 140rpx;
  height: 140rpx;
  background: #333;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 24rpx;
  font-size: 36rpx;
  margin-bottom: 16rpx;
}

.game-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 8rpx;
}

.game-desc {
  font-size: 24rpx;
  color: #999;
}

.background-image {
  position: fixed;
  z-index: -1;
  height: 100%;
}

.back-arrow {
  position: absolute;
  top: 120rpx;
  left: 30rpx;
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 100;
}

.arrow {
  font-size: 48rpx;
  color: #000;
  font-weight: bold;
}

.clickable-box {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}

.clickable-box:active {
  background-color: rgba(0, 0, 0, 0.05);
} 